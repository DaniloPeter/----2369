<mvc:View
    controllerName="ui5.testapp.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    displayBlock="true">

    <Page>
        <customHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Опросный лист" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Завод:"
                            labelFor="input-b"
                        />
                        <Input class="sapUiNoMarginTop"
                            id="input-1"
                            value="1234"
                            maxLength="4" />
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Ресурс:"
                            labelFor="input-b"
                        />
                        <Select forceSelection="false" id="resourceSelect"
                            width="100%"
                            items="{
                                path: 'resource>/Resource'
                            }"
                            selectedKey="{data>/resource}">
                            <core:Item
                                key="{resource>key}"
                                text="{resource>name}" />
                        </Select>
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Режим флексопечати:"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="lineSelect"
                            width="100%"
                            items="{
                        path: 'line>/Line'
                    }"
                            selectedKey="{data>/line}">
                            <core:Item
                                key="{line>key}"
                                text="{line>name}" />
                        </Select>
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Склад:"
                            labelFor="input-line"
                        />
                        <Select width="100%" forceSelection="false" id="orderSelect"
                            items="{
                                path: 'order>/Order'
                            }"
                            selectedKey="{data>/order}">
                            <core:Item
                                key="{order>key}"
                                text="{order>name}" />
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd ">
                        <Label
                            text="Дата и время:"
                            labelFor="input-line"
                        />
                        <DateTimePicker width="100%"
                            id="dateTimePicker"
                            displayFormat="dd.MM.yyyy hh:mm:ss"
                            minutesStep="5" secondsStep="5"
                            placeholder="00.00.0000 00:00:00"
                            
                        />
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Смена"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="shiftSelect"
                            width="100%"
                            items="{
                                path: 'shift>/Shift'
                            }"
                            selectedKey="{data>/shift}">
                            <core:Item
                                key="{shift>key}"
                                text="{shift>name}" />
                        </Select>
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Бригада:"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="crewSelect"
                            width="100%"
                            items="{
                                path: 'crew>/Crew'
                            }"
                            selectedKey="{data>/crew}">
                            <core:Item
                                key="{crew>key}"
                                text="{crew>name}" />
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Инженер по качеству:"
                            labelFor="input-line"
                        />
                        <Select
                            width="100%" forceSelection="false" id="engineerSelect"
                            items="{
                        path: 'engineer>/Engineer'
                    }"
                            selectedKey="{data>/engineer}">
                            <core:Item
                                key="{engineer>key}"
                                text="{engineer>name}" />
                        </Select>
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Печатник высокой печати:"
                            labelFor="input-line"
                        />
                        <Input placeholder="ФИО печатника"/>
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Заказ:"
                            labelFor="input-line"
                        />
                        <Input placeholder="Номер технологического заказа"/>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Клише:"
                            labelFor="input-line"
                        />
                        <Input value="1234A"/>
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Описание клише:"
                            labelFor="input-line"
                        />
                        <Input placeholder="Цвет ручки, цвет и маркировка услуг печати, № клише покровного листа и др."/>
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Формат запечатанного рулона"
                            labelFor="input-line"
                        />
                        <Input placeholder="Формат запечатанного рулона"/>
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Скорость машины"
                            labelFor="input-line"
                        />
                        <Input placeholder="Скорость машины"/>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Диаметр запечатанного рулона"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Погонные метры"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%"  class="sapUiSmallMarginEnd" >
                        <Label
                        text="Длина рапорта"
                        labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Оттиски"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="№ Рулона 1"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Радиус остатка 1"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%" class="sapUiSmallMarginEnd">
                        <Label
                            text="№ Рулона 2"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Радиус остатка 2"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="25%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Брак"
                            labelFor="input-line"
                        />
                        <Switch id="defectSwitch" state="{= ${data>/switch/defect}}"
                            change=".onSwitchChange" customTextOn=" " customTextOff=" " />
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Срыв, в кг: (При срыве более 50 кг необходимо заполнить поля Брак)"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginBottom">
                    <VBox width="25%" class="sapUiSmallMarginEnd">
                        <Label
                            text="Тип брака"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="defectSelect"
                            width="100%"
                            enabled="{= ${data>/switch/defect}}"
                            items="{
                        path: 'defect>/Defect'
                    }"
                            selectedKey="{data>/defect}">
                            <core:Item
                                key="{defect>key}"
                                text="{defect>name}" />
                        </Select>
                    </VBox>
                    <VBox width="100%">
                        <Label
                            text="Комментарий"
                            labelFor="input-line"
                        />
                        <Input enabled="{= ${data>/switch/defect}}" />
                    </VBox>
                </HBox>

                <Label
                    text="Простой"
                    labelFor="input-line"
                />
                <Switch id="downTimeSwitch" state="{= ${data>/switch/downTime}}"
                    change=".onSwitchChange"
                    customTextOn=" "
                    customTextOff=" " />
                <VBox class="sapUiTinyMarginBottom">
                    <Table items="{state>/table/items}">
                        <columns>
                            <Column>
                                <Text text="Тип простоя" />
                            </Column>
                            <Column>
                                <Text text="Номер простоя" />
                            </Column>
                            <Column>
                                <Text text="Начало простоя" />
                            </Column>
                            <Column>
                                <Text text="Время простоя, часов, минут" />
                            </Column>
                            <Column>
                                <Text text="Причина простоя" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Text
                                    text="№{state>downTimeNumber}"
                                />
                                <Select forceSelection="false" id="downTimeSelect"
                                    enabled="{= ${data>/switch/downTime}}"
                                    items="{
                                            path: 'downTime>/DownTime',
                                            templateShareable: false
                                        }"
                                    selectedKey="{state>downTimeType}">
                                    <core:Item
                                        key="{downTime>key}"
                                        text="{downTime>name}" />
                                </Select>

                                <TimePicker enabled="{= ${data>/switch/downTime}}"
                                    id="firstStartDateItem"
                                    dateValue="{state>dateBegin}"
                                    editable="{= ${data>/editMode}}"
                                    change=".onDateChange2"
                                    displayFormat="hh:mm"
                                    placeholder="--:--"
                                />

                                <TimePicker enabled="{= ${data>/switch/downTime}}"
                                    id="TP1"
                                    value="{state>time}"
                                    valueFormat="HH:mm"
                                    displayFormat="HH:mm"
                                    change="handleChange"
                                    placeholder="--:--" />
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>

            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Подтвердить"
                    press="onConfirm" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>