<mvc:View
    controllerName="ui5.testapp.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    displayBlock="true">

    <Page>
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox>
                    <!-- Input Завод -->
                    <VBox>
                        <Label
                            text="Завод"
                            labelFor="input-b"
                        />
                        <Input class="sapUiNoMarginTop"
                            id="input-1"
                            value="1234"
                            maxLength="4" />
                    </VBox>
                    <VBox>
                        <Label
                            text="Печатна линия"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="lineSelect"
                            items="{
                        path: 'line>/Line'
                    }"
                            selectedKey="{data>/line}">
                            <core:Item
                                key="{line>key}"
                                text="{line>name}" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label
                            text="Условия заказа"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="orderSelect"
                            items="{
                        path: 'order>/Order'
                    }"
                            selectedKey="{data>/order}">
                            <core:Item
                                key="{order>key}"
                                text="{order>name}" />
                        </Select>
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Label
                            text="Дата"
                            labelFor="input-line"
                        />
                        <DateTimePicker
                            id="datetimepicker"
                            displayFormat="dd.MM.yyyy hh:mm:ss"
                            minutesStep="3" secondsStep="5"
                            change="handleChange"
                            class="sapUiSmallMarginBottom" />
                    </VBox>
                    <VBox>
                        <Label
                            text="Смена"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="shiftSelect"
                            items="{
                        path: 'shift>/Shift'
                    }"
                            selectedKey="{data>/shift}">
                            <core:Item
                                key="{shift>key}"
                                text="{shift>name}" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label
                            text="Бригада"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Label
                            text="Инженер по качеству"
                            labelFor="input-line"
                        />
                        <Select forceSelection="false" id="engineerSelect"
                            items="{
                        path: 'engineer>/Engineer'
                    }"
                            selectedKey="{data>/engineer}">
                            <core:Item
                                key="{engineer>key}"
                                text="{engineer>name}" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label
                            text="Печатник высокой печати"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Label
                            text="Заказ"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="Клише"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="Формат запечатанного рулона"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="Скорость машины"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Label
                            text="Диаметр запечатанного рулона"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="Радиус рулона 1"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="№ Рулона 2"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                    <VBox>
                        <Label
                            text="Радиус остатка 2"
                            labelFor="input-line"
                        />
                        <Input />
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Label
                            text="Брак"
                            labelFor="input-line"
                        />
                        <Switch id="defectSwitch" state="{= ${data>/defect}}"
                            change=".onSwitchChange" customTextOn=" " customTextOff=" " />
                    </VBox>
                    <VBox>
                        <Label
                            text="Срыв, в кг: (При срыве более 50 кг необходимо заполнить поля Брак)"
                            labelFor="input-line"
                        />
                        <Input enabled="{= ${data>/defect}}" />
                    </VBox>
                </HBox>
                <HBox>

                    <VBox>
                        <Label
                            text="Тип брака"
                            labelFor="input-line"
                        />
                        <Select enabled="{= ${data>/defect}}">
                            <core:ListItem key="line1" text="Линия 1" />
                            <core:ListItem key="line2" text="Линия 2" />
                            <core:ListItem key="line3" text="Линия 3" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label
                            text="Комментарий"
                            labelFor="input-line"
                        />
                        <Input enabled="{= ${data>/defect}}" />
                    </VBox>
                </HBox>
                <HBox>
                </HBox>
                <Label
                    text="Простой"
                    labelFor="input-line"
                />
                <Switch id="downTimeSwitch" state="{= ${data>/downTimeSwitch}}"
                    change=".onSwitchChange"
                    customTextOn=" "
                    customTextOff=" " />
                <HBox>
                    <Label
                        text="Простой №1" />
                    <VBox>
                        <Label text="Тип простоя" />
                        <Select forceSelection="false" id="downTimeSelect"
                            enabled="{= ${data>/downTimeSwitch}}"
                            items="{
                        path: 'downTime>/DownTime'
                    }"
                            selectedKey="{data>/downTime}">
                            <core:Item
                                key="{downTime>key}"
                                text="{downTime>name}" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label text="Начало простоя" />
                        <TimePicker enabled="{= ${data>/downTimeSwitch}}"
                            id="startDateItem"
                            dateValue="{employee>BirthDate}"
                            editable="{= ${data>/editMode}}"
                            change=".onDateChange2"
                            displayFormat="hh:mm"
                            placeholder="--:--"
                        />
                    </VBox>
                    <VBox>
                        <Label text="Время простоя, часов" />
                        <Input enabled="{= ${data>/downTimeSwitch}}"></Input>
                    </VBox>
                    <VBox>
                        <Label text="Время простоя, минут" />
                        <Input enabled="{= ${data>/downTimeSwitch}}"></Input>
                    </VBox>
                </HBox>
                <HBox>
                    <Label
                        text="Простой №2" />
                    <VBox>
                        <Label text="Тип простоя" />
                        <Select forceSelection="false" id="downTimeSelect2"
                            enabled="{= ${data>/downTimeSwitch}}"
                            items="{
                        path: 'downTime>/DownTime'
                    }"
                            selectedKey="{data>/downTime}">
                            <core:Item
                                key="{downTime>key}"
                                text="{downTime>name}" />
                        </Select>
                    </VBox>
                    <VBox>
                        <Label text="Начало простоя" />
                        <TimePicker enabled="{= ${data>/downTimeSwitch}}"
                            id="startDateItem2"
                            dateValue="{employee>BirthDate}"
                            editable="{= ${data>/editMode}}"
                            change=".onDateChange2"
                            displayFormat="hh:mm"
                            placeholder="--:--"
                        />
                    </VBox>
                    <VBox>
                        <Label text="Время простоя, часов" />
                        <Input enabled="{= ${data>/downTimeSwitch}}"></Input>
                    </VBox>
                    <VBox>
                        <Label text="Время простоя, минут" />
                        <Input enabled="{= ${data>/downTimeSwitch}}"></Input>
                    </VBox>
                </HBox>
                <Button
                    text="Подтвердить"
                    press="onConfirm" />
            </VBox>
        </content>
    </Page>
</mvc:View>